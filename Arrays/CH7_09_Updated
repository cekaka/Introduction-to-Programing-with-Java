/*
 * Write a program,
 *  which prints the positions of letters in english alphabet from given string.
 */
import java.util.*;
public class CH7_09_Updated {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter a string");
		String word = input.nextLine();
	
		System.out.println("The positions of letters in alphabet:");
		for(int i=0;i<word.length();i++){
			int alphabPosition = 0;
			int position= word.charAt(i);
			alphabPosition =  position-(int) 'a';
			
			System.out.print(alphabPosition);
		}
		
	}

}

