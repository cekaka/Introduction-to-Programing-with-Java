/*
 * Write a program, which prints the small–µst and biggest number from series of numbers.
 */
import java.util.*;
public class CH6_03 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter a count of numbers:");
		int count = input.nextInt();
		
		System.out.println("Enter a number:");
		int num= input.nextInt();
		
		int minNum;
		int maxNum;
		minNum=maxNum=num;
	
		for(int i=0;i<count-1;i++){
			
			System.out.println("Enter a number:");
			num= input.nextInt();
			
			if(num>maxNum){
				maxNum=num;	
			}
			
			if(num<minNum){
				minNum=num;
			}
		}

		System.out.println("the smallst number is: "+minNum);
		System.out.println("the biggest number is: "+maxNum);
	}

}
